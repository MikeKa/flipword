extends layout
block content
    div(data-role="page")
        div(data-role="header", data-position="fixed")
            h2= title
            a(href="/home", data-icon="home", data-ajax="false", class="ui-btn-left") Home
            a(href="/new", data-icon="plus", data-ajax="false", class="ui-btn-right") Add
        div(data-role="content")
            ul#words(data-role="listview", data-filter="true", data-filter-placeholder="Filter", data-inset="true")
              - each action in units
                   li(id=action._id)
                       a(href="/units/edit/#{action._id}" data-transition="none")
                            h3= action.number + ". " + action.title
                            p
                            p=  action.note
                            p(class="ui-li-aside")
                                strong= action.datetime
                          a(href="/units/delete/#{action._id}",data-theme="a", data-icon="delete")
        div(data-role="footer", data-position="fixed")
            h3 &copy; 2016 Starlightwords