extends layout
block content
    h2= title
    ul#words(data-role="listview", data-filter="true", data-filter-placeholder="Filter", data-inset="true")
        - each action in words
            li(id=action._id)
                a(href="/words/edit/#{action._id}" data-transition="flip")
                    h3= action.wordeng
                    p
                        span= action.wordrus
                        span , &nbsp
                        span= action.lesson
//                       span , &nbsp
                    p=  action.note
                    p(class="ui-li-aside")
                        strong= action.datetime
                    a(href="/words/delete/#{action._id}",data-theme="a", data-icon="delete")